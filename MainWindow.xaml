<Window x:Class="Diego_P2_AP1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Diego_P2_AP1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <!--Menu Registro-->
            <Menu Height="20" >
                <!--Submenu-->
                <MenuItem Header="Registrar">
                    <MenuItem x:Name = "rMenuItem" Header="Registrar "  Click="rMenuItem_CLick"/>  
                </MenuItem>
                <MenuItem Header="Consultar">
                    <MenuItem x:Name = "cMenuItem" Header="Consultar "  Click="cMenuItem_CLick"/>
                </MenuItem>
            </Menu>
        </StackPanel>

    </Grid>
</Window>
